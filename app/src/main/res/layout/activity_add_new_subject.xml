<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grudus.nativeexamshelper.activities.AddNewSubjectActivity"
    android:id="@+id/add_subject_layout"
    android:orientation="vertical" >

    <include layout="@layout/toolbar" />

    <RelativeLayout
        style="@style/UserInputLayoutStyle">


        <ImageView
            style="@style/ImageIconAddExamTheme"
            android:src="@drawable/info_icon"
            android:id="@+id/add_subject_icon1"/>

        <EditText
            style="@style/UserInputEditTextStyle"
            android:id="@+id/add_subject_title"
            android:maxLines="1"
            android:maxLength="@integer/add_xxx_max_chars"
            android:hint="@string/hint_subject_title"
            android:layout_toEndOf="@id/add_subject_icon1"/>


        <ImageView
            style="@style/ImageIconAddExamTheme"
            android:src="@drawable/color_icon"
            android:id="@+id/add_subject_color_icon"
            android:layout_below="@id/add_subject_icon1"/>

        <EditText
            style="@style/UserInputEditTextStyle"
            android:hint="@string/hint_subject_color"
            android:id="@+id/add_subject_color"
            android:focusable="false"
            android:layout_below="@id/add_subject_title"
            android:layout_toEndOf="@id/add_subject_color_icon"/>

        <Button
            style="@style/AddButtonStyle"
            android:id="@+id/add_subject_button"
            android:text="@string/button_text_add_exam"
            android:layout_below="@id/add_subject_color"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>
